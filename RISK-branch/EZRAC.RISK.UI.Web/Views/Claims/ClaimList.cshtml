@model EZRAC.Risk.UI.Web.ViewModels.Claims.ClaimInfoViewModel
@using EZRAC.Risk.UI.Web.Helper
@using EZRAC.RISK.Util.Common
@{
    ViewBag.Title = "ClaimList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_ClaimsUrl")
<form class=" form-horizontal top5">
    <div class="form-group bottom0">
        <div class="col-xs-5">
            <div class="col-xs-6 padding-horizontal-0 ">
                <div class="relative">
                    <div class="center-align input-type-search-icon input-icon">
                        <input type="text" id="txtSearchClaim" class="form-control input-type-search " placeholder="Search Contract / Claim Number" />
                    </div>
                </div>
            </div>
            <div class="col-xs-6 top5">
                <div class="row"> <a href="javascript:void(0);" class="advandced-search-button" id="AdvancedSearchLink" data-toggle="collapse" data-target="#advanced-search-collapsable"> Advance Search </a> </div>
            </div>
        </div>
    </div>
    <div class="form-group top5">
        <!-- Collapsible Container Starts -->
        <div class="col-xs-12 collapse  advanced-search-collapsable" id="advanced-search-collapsable">
            <div class=" col-xs-12 tooltip-up-arrow advanced-search-container ">
                <div class="row  bottom20 top20 padding-left-20">
                    <div class="pull-left search-form-group  padding-left-10">
                        <div class="col-xs-12 padding-horizontal-0">
                            <div class="pull-left padding-left-0 padding-right-15">
                                <select class="form-control ncl-slect selectpicker" id="paramAdvanceSearch" data-live-search="true">
                                    @{
                                        int i = 1;
                                        foreach (var item in ViewBag.AdvacedSearchCriteria)
                                        {
                                            <option searchtype="@item.Value" value="@i">@item.Text</option>
                                            i++;
                                        }
                                    }
                                    @*<option searchtype="claim/contract" value="1"> Claim/Contract</option>
                                        <option searchtype="primarydriverlastname" value="2">Primary Driver's Last Name</option>
                                        <option searchtype="additionaldriverlastname" value="3">Additional Driver's Last Name</option>
                                        <option searchtype="thirdpartylastname" value="4">Third Party's Last Name</option>
                                        <option searchtype="driverlicense" value="5">Driver License</option>
                                        <option searchtype="checkno" value="6">Check Number</option>
                                        <option searchtype="checkamount" value="7">Check Amount</option>
                                        <option searchtype="unitno" value="8">Unit Number</option>
                                        <option searchtype="last8ofvin" value="9">Last 8 of VIN</option>
                                        <option searchtype="tagno" value="10">Tag Number</option>
                                        <option searchtype="phone" value="11">Phone</option>
                                        <option searchtype="dateofloss" value="12">Date of Loss</option>
                                        <option searchtype="policecaseno" value="13">Police Case Number</option>
                                        <option searchtype="inspolicyno" value="14">Insurance Policy Number</option>
                                        <option searchtype="chargeback" value="15">ChargeBack </option>
                                        <option searchtype="zurichclaimno" value="16">Zurich Claim Number</option>
                                        <option searchtype="primarydriverins" value="17">Primary Driver's Insurance Claim Number</option>
                                        <option searchtype="additionaldriverins" value="18">Additional Driver's Insurance Claim Number</option>
                                        <option searchtype="thirdpartyins" value="19">Third Party's Insurance Claim Number</option>
                                        <option searchtype="notes" value="20">Notes</option>
                                        <option searchtype="followdaterange" value="22">Follow Up Date. (It should be range – Date From ,Date to)</option>*@
                                </select>
                            </div>
                            <div class="sandbox-container pull-left padding-left-0 padding-right-15">
                                <input type="text" class="form-control no-border input-unit-number" id="AdvanceSearchItem" placeholder="Search Text" />
                                @*<input type="text" readonly="readonly" id="DateOfLoss" value='' class="form-control sand-datepicker display-inline-block  AdvancedSearchDatepicker" />*@
                                <input type="text" readonly="readonly" id="DateFrom" value='' placeholder="From" class="form-control sand-datepicker display-inline-block  AdvancedSearchDatepickerFrom" />
                                <input type="text" readonly="readonly" id="DateTo" value='' placeholder="To" class="form-control sand-datepicker display-inline-block  AdvancedSearchDatepickerTo" />
                            </div>
                        </div>

                    </div>

                    <div class="float-left padding-right-0">
                        <div class="col-xs-3">
                            <button type="button" class="btn btn-primary search-form-submit " onclick="GetadvancedSearchRecords();"> <span class="glyphicon glyphicon-search"></span> </button>
                        </div>
                        @*<a class="float-left top15 left20 padding-left-0 padding-right-0 addfilter" href="javascript:void(0);">Add Filter</a> <a class="float-left top15 padding-left-0 reset-button" href="javascript:void(0);"> <span class="col-xs-1 reset-image"></span>Reset All </a>*@
                        <a class="float-left top15 left20 padding-left-0 padding-right-0 reset-button" id="ResetAdvancedSearch" href="javascript:void(0);"> <span class="col-xs-1 reset-image"></span>Reset All </a>
                    </div>
                </div>
            </div>
            <a class="close-container" data-toggle="collapse" data-target="#advanced-search-collapsable" title="Close"></a>
        </div>
        <!-- Collapsible Container Ends -->
    </div>
</form>

    <div class="claim-table-container top15">
        <div class="row padding-horizontal-15">
            <div class="input-group-btn col-xs-6">
                <div class="row">
                    <div class="claim-group-button ">
                        <a id="linkFollowUp" class="btn btn-default btn-sm grey-border-1 lighter active black-color-hover black-color" href="javascript:void(0);">Follow Up Claims</a>
                        <a id="linkSearchResults" class="display-none btn  btn-sm grey-border-1 lighter black-color-hover  black-color ">Search Results</a>
                    </div>
                </div>
            </div>
            <div class="col-xs-3 pull-right">
                <div class="row">

                    @if (SecurityHelper.IsAuthorized(EZRAC.RISK.Util.Common.ClaimsConstant.DeleteClaim))
                    {
                        <a id="delete-claim" class="pull-right btn btn-delete-claim btn-sm grey-border-1 " href="javascript:void(0);">DELETE CLAIM</a>
                    }
                    @if (SecurityHelper.IsAuthorized(EZRAC.RISK.Util.Common.ClaimsConstant.NewClaim))
                    {
                        @Html.ActionLink("NEW CLAIM", "CreateClaim", new { }, new { @class = "pull-right right10 btn btn-new-claim btn-sm grey-border-1" })
                    }

                </div>
            </div>
        </div>
        <div id="gridcontainer">
            @Html.Partial("_ClaimListGrid", @Model.ClaimInfo)
        </div>
    </div>
<div id="divSearchResults" class="row padding-horizontal-15">
</div>
@if (SecurityHelper.IsInRole(ClaimsConstant.Roles.RiskSupervisor) || SecurityHelper.IsInRole(ClaimsConstant.Roles.RiskManager))
{ 
    <div class="top30">
        <div class="row padding-horizontal-15">
            <div class="input-group-btn  claim-group-button pending-claims">
                <a id="PendingApproval" class="btn  btn-sm grey-border-1 btn-default lighter black-color-hover black-color pending" href="javascript:void(0);">Pending Claims For Approval</a>
                <a id="Approved" class="btn  btn-sm grey-border-1 lighter black-color-hover black-color pending" href="javascript:void(0);">Approved / Rejected Claims</a>
            </div>
        </div>
        <div id="pendingClaimsContainer">
        </div>
    </div>
}
<script src="@Url.Content("~/Scripts/appScripts/claims-list.js")"></script>
