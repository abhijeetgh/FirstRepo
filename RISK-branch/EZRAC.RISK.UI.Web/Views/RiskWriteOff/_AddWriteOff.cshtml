@model EZRAC.Risk.UI.Web.ViewModels.Claims.WriteOffViewModel
@using EZRAC.Risk.UI.Web.Helper;
@*UpdateTargetId = "view-writeoff"*@
@using (Ajax.BeginForm("AddWriteOff", "RiskWriteOff", new AjaxOptions { HttpMethod = "POST", OnSuccess = "addWriteOffSuccess", OnFailure = "onErrorHandler(xhr)" }, new { @class = "form-inline cla-form", role = "form", id = "add-writeoff-form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group inline-form-space">

        @Html.LabelFor(model => model.SelectedWriteOffTypeId)
        <br>

        @Html.DropDownListFor(model => model.SelectedWriteOffTypeId, Model.WriteOffTypes, "Please select", new { @class = "form-control ncl-slect selectpicker top5", @id = "WriteOffTypes", @data_live_search = "true", @title = "Please select" })
        @Html.ValidationMessageFor(model => model.SelectedWriteOffTypeId)

    </div>
    <div class="form-group inline-form-space">

        @Html.LabelFor(model => model.Amount) $
        <br>
        @Html.TextBoxFor(model => model.Amount, new { @class = "form-control ncl-slect top5", @placeholder = "Amount" })
        @Html.ValidationMessageFor(model => model.Amount)
    </div>
    <div class="form-group inline-form-space">
        <button type="submit" class="btn btn1 top28" title="Save">SAVE</button>
    </div>
    @Html.HiddenFor(model => model.ClaimId)
}

