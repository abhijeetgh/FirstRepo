@model EZRAC.Risk.UI.Web.ViewModels.Claims.PaymentsViewModel
@using EZRAC.Risk.UI.Web.Helper;

<link href="@Url.Content("~/Content/dataTable.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-dataTable.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/appScripts/payment-tab.js")" type="text/javascript"></script>
<div class="row">
    <div class="col-xs-12">
        <div class="panel panel-default">
            <header class="panel-heading">
                <h3 class="panel-title"> <span>Total Payment : $</span><span id="totalPayment">@(Model.TotalPayment.HasValue ? Model.TotalPayment.Value : default(double)) </span><span class="left-offset">Total Due : $</span><span class="totalDue">@Model.TotalDue </span></h3>
            </header>
            <div class="panel-body">

                @if (SecurityHelper.IsAuthorized(EZRAC.RISK.Util.Common.ClaimsConstant.AddPayments))
                {
                    <button type="button" class="btn btn1" data-toggle="collapse" data-target=".addPayment" aria-expanded="false" aria-controls="addcharge"><span class="glyphicon glyphicon-plus"></span> ADD PAYMENT</button>
                    <div class="well cla-well collapse container-fluid top15 relative addPayment">
                        <div class="close-container" data-toggle="collapse" data-target=".addPayment" title="Close"></div>
                        <div class="tooltip-up-arrow" id="addPaymentDiv">
                            @Html.Partial("_AddPayments", Model)
                        </div>
                    </div>
                }

                <div class="top-space clearfix"></div>
                <div id="gridContainer">
                    @Html.Partial("_PaymentTableInfo", Model)
                </div>
            </div>
        </div>
    </div>
</div>

