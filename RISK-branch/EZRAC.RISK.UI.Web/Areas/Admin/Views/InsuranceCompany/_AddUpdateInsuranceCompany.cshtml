@model EZRAC.Risk.UI.Web.ViewModels.Admin.InsuranceCompanyViewModel

@if (Model.IsNew)
{
    <h4 class="padding-left-15 padding-vertical-15" id="insuranceCompanyTitle">New Insurance Company</h4>
}
else
{
    <h4 class="padding-left-15 padding-vertical-15" id="insuranceCompanyTitle">Update Insurance Company</h4>
}
@using (@Ajax.BeginForm("AddOrUpdateInsuranceCompany", "InsuranceCompany", new { area = "Admin" }, new AjaxOptions { HttpMethod = "POST", OnFailure = "onErrorHandler(xhr)", OnSuccess = "successData(data)" }, new { @class = "form-horizontal cla-form top20 bottom20", role = "form", id = "insuranceCompanyForm" }))
{
    @Html.AntiForgeryToken();
    <div class="row bottom15">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Company Name<label class="mandetory-star">*</label></label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<input type="text" placeholder="Company name" class="form-control">*@
                @Html.TextBoxFor(x => x.CompanyName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CompanyName)
                <div id="errorCompanyname" class="errorMsg"></div>
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Address</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<input type="text" placeholder="Address" class="form-control">*@
                @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Address)
            </div>
        </div>
    </div>
    <div class="row bottom15">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">City</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<input type="email" placeholder="City" class="form-control">*@
                @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.City)
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">State</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<input type="text" placeholder="Address" class="form-control">*@
                @Html.TextBoxFor(x => x.State, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.State)
            </div>
        </div>
    </div>
    <div class="row bottom15">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Zip</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<input type="text" placeholder="Zip" class="form-control">*@
                @Html.TextBoxFor(x => x.Zip, new { @class = "form-control", placeholder = "e.g. XXXXX-XXXX" })
                @Html.ValidationMessageFor(x => x.Zip)
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Phone</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<input type="text" placeholder="Phone" class="form-control">*@
                @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "e.g. XXX-XXX-XXXX" })
                @Html.ValidationMessageFor(x => x.PhoneNumber)
            </div>
        </div>
    </div>
    <div class="row bottom15">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Fax</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<input type="text" placeholder="Fax" class="form-control">*@
                @Html.TextBoxFor(x => x.Fax, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Fax)
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Email</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
               @* <input type="text" placeholder="Email" class="form-control">*@
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
    </div>
    <div class="row bottom15">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Contact Person</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<input type="text" placeholder="Contact person" class="form-control">*@
                @Html.TextBoxFor(x => x.Contact, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Contact)
            </div>
        </div>
    </div>
    <div class="row bottom15">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Company Notes</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8">
                @*<textarea class="form-control cla-textarea top5" style="width:400px;height:100px;border-radius:0" placeholder="Company notes"></textarea>*@
                @Html.TextAreaFor(x => x.CompanyNotes, new { @class="form-control cla-textarea top5", style="width:400px;height:100px;border-radius:0"})
                @Html.ValidationMessageFor(x => x.CompanyNotes)
            </div>
        </div>
    </div>

    <div class="col-xs-12 bottom20 top15">
        <button class="btn btn2 form-buttons" type="button" disabled="disabled" id="cancelInsurance">CANCEL</button>
        <button class="btn btn1 form-buttons" type="submit" disabled="disabled" id="saveInsuranceCompany">SAVE</button>
    </div>
    
    @Html.HiddenFor(x => x.Id, new { id = "insuranceCompanyId" })
}

<script src="~/Scripts/appScripts/AdminPages/InsuranceCompany/insurance-company.js"></script>