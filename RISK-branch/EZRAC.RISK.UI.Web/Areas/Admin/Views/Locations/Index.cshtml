@model EZRAC.Risk.UI.Web.ViewModels.Admin.LocationMasterViewModel


<link href="@Url.Content("~/Content/dataTable.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-dataTable.js")" type="text/javascript"></script>

@{
    ViewBag.Title = "Location Management";
}
<!DOCTYPE html>
<html lang="en">
<body>
    @Html.Partial("~/Areas/Admin/Views/Admin/_ChildHeader.cshtml")
    <!-- main container -->
    <div>
        <div class="tab-pane  fade in  active " id="result-panel">
            <div>
                <div class="row top20">
                    <div class="col-xs-12">
                        <div class="form-group pull-left">
                            <div class="relative admin-search">
                                <div class="center-align input-type-search-icon input-icon">
                                    <input type="text" placeholder="Search" id="searchLocations" class="form-control input-type-search">
                                </div>
                            </div>
                        </div>
                        <div class="form-group inline-form-space pull-left">
                            <button class="btn btn1" type="button" id="addLocation" data-id="0" data-url="@Url.Action("AddOrUpdate", "Locations")"><span class="glyphicon"></span>NEW LOCATION</button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-5" id="locationTable" style="max-height:700px;overflow-y:scroll">
                        @Html.Partial("View", Model.Locations)
                    </div>
                    <div class="col-xs-7">
                        <div class="row tab-wrapper">
                            <div class="col-sm-12">
                                <div class="tab-content container-fluid no-padding" style="border-top: 1px solid #bdbdbd">
                                    <div id="location-details" class="tab-pane fade in active" role="tabpanel">
                                        @Html.Partial("AddOrUpdate", Model.LocationViewModel)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="@Url.Content("~/Scripts/appScripts/AdminPages/Common.js")"></script>