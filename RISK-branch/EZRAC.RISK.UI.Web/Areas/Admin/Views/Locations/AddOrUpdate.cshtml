@model EZRAC.Risk.UI.Web.ViewModels.Admin.LocationViewModel

@if (!Model.IsUpdate)
{
    <h4 class="padding-left-15 padding-bottom-10 padding-top-10 details-header">New Location</h4>
}
else
{
    <h4 class="padding-left-15 padding-bottom-10 padding-top-10 details-header">Update Location</h4>
}
@using (Ajax.BeginForm("AddOrUpdate", "Locations", new { area = "Admin" }, new AjaxOptions { HttpMethod = "POST", OnSuccess = "AddUpdateLocationSuccess", OnFailure = "onErrorHandler(xhr)" }, new { @class = "form-horizontal cla-form top20 bottom20", @id = "locationForm" }))
{
    @Html.AntiForgeryToken()
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Code</label><span class="mandetory-star">*</span>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @Html.TextBoxFor(model => model.Code, new {  @class = "form-control form-input-value", id = "inputcode" })
                @Html.ValidationMessageFor(model => model.Code)
                <div id="errorMessage" class="errorMsg"></div>

            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Description</label><span class="mandetory-star">*</span>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @Html.TextBoxFor(model => model.Description, new {  @class = "form-control form-input-value", id = "inputDescription" })
                @Html.ValidationMessageFor(x => x.Description)
            </div>
        </div>
    </div>

    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Company</label><span class="mandetory-star">*</span>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @Html.DropDownListFor(model => model.SelectedCompany, Model.Companies, "-- Select --", new { @class = "form-control ncl-slect selectpicker bs-select-hidden", @data_live_search = "true", id = "companies" })

                @Html.ValidationMessageFor(model => model.SelectedCompany)
            </div>
        </div>

        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">State</label><span class="mandetory-star">*</span>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @Html.TextBoxFor(model => model.State, new { @class = "form-control form-input-value", id = "inputState", maxlength = "2"  })
                @Html.ValidationMessageFor(x => x.State)
            </div>

        </div>

        @*<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                    <label for="">Status</label>
                </div>
                <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                    <div class="display-inline">
                        @Html.RadioButtonFor(model => model.Status, Model.Status)
                    </div>
                    <div class="display-inline left15">
                        @Html.RadioButtonFor(model => model.Status, Model.Status)
                    </div>
                </div>
            </div>*@

    </div>

    <div class="col-xs-12 bottom20 top15">
        <button class="btn btn2 form-buttons" id="btn-cancel-location" type="button" disabled="disabled" >CANCEL</button>
        <button class="btn btn1 form-buttons" type="submit" disabled="disabled">SAVE</button>
    </div>

    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.IsUpdate)
}

<script type="text/javascript">




</script>


<script src="@Url.Content("~/Scripts/appScripts/AdminPages/locations.js")"></script>