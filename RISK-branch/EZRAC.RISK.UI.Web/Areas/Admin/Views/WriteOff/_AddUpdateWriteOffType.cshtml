@model EZRAC.Risk.UI.Web.ViewModels.Admin.WriteOffTypeViewModel

@if (Model.IsNew)
{
    <h4 class="padding-left-15 padding-bottom-10 padding-top-10 details-header">New Write Off Type</h4>
}
else
{
    <h4 class="padding-left-15 padding-bottom-10 padding-top-10 details-header">Update Write Off Type</h4>
}
@using (Ajax.BeginForm("AddOrUpdateWriteOffType", "WriteOff", new { area = "Admin" }, new AjaxOptions { HttpMethod = "POST", OnSuccess = "success", OnFailure = "onErrorHandler(xhr)" }, new { @class = "form-horizontal cla-form top20 bottom20", @id = "writeofftypeForm" }))
{
    @Html.AntiForgeryToken()
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Write Off Type<label class="mandetory-star">*</label></label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @Html.TextBoxFor(x => x.WriteOffType, new { @class = "form-control form-input-value", id = "inputwriteoffType" })
                @Html.ValidationMessageFor(x => x.WriteOffType)
                <div id="errorMessage" class="errorMsg"></div>

            </div>
        </div>
    </div>
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Description<label class="mandetory-star">*</label></label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control form-input-value", id = "inputDescription" })
                @Html.ValidationMessageFor(x => x.Description)
            </div>
        </div>
    </div>
    <div class="col-xs-12 bottom20 top15">
        <button class="btn btn2 form-buttons" type="button" disabled="disabled" id="cancelWriteOffType">CANCEL</button>
        <button class="btn btn1 form-buttons" type="submit" disabled="disabled">SAVE</button>
    </div>

    @Html.HiddenFor(x => x.Id, new { id = "WriteOffTypeId" })
}

<script src="@Url.Content("~/Scripts/appScripts/AdminPages/WriteOffTypes/add-update-writeoff.js")" type="text/javascript"></script>