@model EZRAC.Risk.UI.Web.ViewModels.Admin.VehicleSectionViewModel

@if (Model.IsNew)
{
    <h4 class="padding-left-15 padding-vertical-15" id="vehicleSectionTitle">New Vehicle Section</h4>
}
else
{
    <h4 class="padding-left-15 padding-vertical-15" id="vehicleSectionTitle">Update Vehicle Section</h4>
}

@using (Ajax.BeginForm("AddUpdateVehicleSection", "VehicleSection", new { area = "Admin" }, new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, OnSuccess = "success(data)", OnFailure = "onErrorHandler(xhr)" }, new { @class = "form-horizontal cla-form top20 bottom20", id = "vehicleSectionForm" })) 
{ 
    @Html.AntiForgeryToken()
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Vehicle Section<label class="mandetory-star">*</label></label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @Html.TextBoxFor(x => x.Section, new { @class="form-control",id="vehicleSectionText",@data_isdirty="false"})
                @Html.ValidationMessageFor(x => x.Section)
                <div id="errorMessage" class="errorMsg"></div>
            </div>
        </div>
    </div>
    <div class="col-xs-12 bottom20 top15">
        <button class="btn btn2 form-input" type="button" disabled="disabled" id="cancelVehicleSection">CANCEL</button>
        <button class="btn btn1 form-input" type="submit" disabled="disabled">SAVE</button>
    </div>
    
    @Html.HiddenFor(x => x.Id, new { id="vehicleSectionId" })
}
<script src="@Url.Content("~/Scripts/appScripts/AdminPages/VehicleSection/add-update-vehicle-section.js")" type="text/javascript"></script>