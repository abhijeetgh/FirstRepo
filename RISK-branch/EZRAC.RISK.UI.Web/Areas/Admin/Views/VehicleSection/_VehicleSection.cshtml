@model EZRAC.Risk.UI.Web.ViewModels.Admin.VehicleSectionMasterViewModel

<div>
    <div class="row top20">
        <div class="col-xs-12">
            <div class="form-group pull-left">
                <div class="relative admin-search">
                    <div class="center-align input-type-search-icon input-icon">
                        <input type="text" placeholder="Search" id="searchVehicleSection" class="form-control input-type-search">
                    </div>
                </div>
            </div>
            <div class="form-group inline-form-space pull-left">
                <button class="btn btn1" type="button" id="newVehicleSection" data-url="@Url.Action("NewVehicleSection","VehicleSection")"><span class="glyphicon"></span> NEW VEHICLE SECTION</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5" id="updateContainer" style="max-height:680px;overflow-y:scroll">

           @Html.Partial("_VehicleSectionTable", Model.VehicleSectionsList)

        </div>
        <div class="col-xs-7">
            <div class="row tab-wrapper">
                <div class="col-sm-12">
                    <div class="tab-content container-fluid no-padding detailsBorderTop">
                        <div id="vehicleSection" class="tab-pane fade in active" role="tabpanel">
                            @Html.Partial("_AddUpdateVehicleSection", Model.VehicleSectionViewModel)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/appScripts/AdminPages/VehicleSection/vehicle-section.js")" type="text/javascript"></script>