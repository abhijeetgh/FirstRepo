@model IEnumerable<EZRAC.Risk.UI.Web.ViewModels.Admin.PermissionCategoryModel>
<h4 class="padding-left-15 padding-vertical-15">User Role Permission</h4>
<div class="row bottom10">

    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <div class="col-xs-4 col-sm-5 col-md-5 col-lg-8 top5 padding-right-0">
            User Role Name : <span id="lblRoleName"></span>
        </div>
    </div>
</div>
<div class="row">
    @{
        @Html.AntiForgeryToken()
        foreach (var item in Model)
        {
            <div class="PermissionCategory" style="margin: 15px 45px;">
                <h4 class="bold">@item.CategoryName</h4><br />
                @if (item.ViewPermission != null && item.ViewPermission.Count() > 0)
                {
                    <div class="clearfix">
                        <span class="bold">&nbsp; View Permission</span><br />
                        <div class="checkbox-holder">
                            @foreach (var viewitem in item.ViewPermission)
                            {
                                <div style="float: left; margin: 8px 0px;">
                                    <input type="checkbox" value="@viewitem.PermissionId" id="view_@viewitem.PermissionId" />
                                    <label for="view_@viewitem.PermissionId">@viewitem.PermissionName</label>
                                </div>
                            }
                        </div>
                    </div>
                    
                }
                @if (item.CreatePermission != null && item.CreatePermission.Count() > 0)
                {
                    <div class="clearfix">
                        <span class="bold">&nbsp; Create Permission</span><br />
                        <div class="checkbox-holder">
                            @foreach (var viewitem in item.CreatePermission)
                            {
                                <div style="float: left; margin: 8px 0px;">
                                    <input type="checkbox" value="@viewitem.PermissionId" id="view_@viewitem.PermissionId" />
                                    <label for="view_@viewitem.PermissionId">@viewitem.PermissionName</label>
                                </div>
                            }
                        </div>
                    </div>
                    
                }
                @if (item.EditPermission != null && item.EditPermission.Count() > 0)
                {
                    <div class="clearfix">
                        <span class="bold">&nbsp; Edit Permission</span><br />
                        <div class="checkbox-holder">
                            @foreach (var viewitem in item.EditPermission)
                            {
                                <div style="float: left; margin: 8px 0px;">
                                    <input type="checkbox" value="@viewitem.PermissionId"  id="view_@viewitem.PermissionId" />
                                    <label for="view_@viewitem.PermissionId">@viewitem.PermissionName</label>
                                </div>
                            }
                        </div>
                    </div>
                    
                }
                @if (item.DeletePermission != null && item.DeletePermission.Count() > 0)
                {
                    <div class="clearfix">
                        <span class="bold">&nbsp; Delete Permission</span><br />
                        <div class="checkbox-holder">
                            @foreach (var viewitem in item.DeletePermission)
                            {
                                <div style="float: left; margin: 8px 0px;">
                                    <input type="checkbox" value="@viewitem.PermissionId" id="view_@viewitem.PermissionId" />
                                    <label for="view_@viewitem.PermissionId">@viewitem.PermissionName</label>
                                </div>
                            }
                        </div>
                    </div>
                    
                }
                @if (item.OtherPermission != null && item.OtherPermission.Count() > 0)
                {
                    <div class="clearfix">
                        <span class="bold">&nbsp; Other Permission</span><br />
                        <div class="checkbox-holder">
                            @foreach (var viewitem in item.OtherPermission)
                            {
                                <div style="float: left; margin: 8px 0px;">
                                    <input type="checkbox" value="@viewitem.PermissionId" id="view_@viewitem.PermissionId" />
                                    <label for="view_@viewitem.PermissionId">@viewitem.PermissionName</label>
                                </div>
                            }
                        </div>
                    </div>
                    
                }
            </div>
        }
    }


