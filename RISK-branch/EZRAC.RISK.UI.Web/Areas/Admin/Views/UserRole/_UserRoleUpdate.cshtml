    <input type="hidden" id="OriginalPermission" value="" />
    <input type="hidden" id="CurrentSelectedRoleID" />
</div>
<div class="col-xs-12 bottom20 top15">
    <button class="btn btn2 " type="button" disabled="disabled" id="cancelStatus">CANCEL</button>
    <button class="btn btn1 " type="button" disabled="disabled" id="saveStatus">SAVE</button>    
    &nbsp;<input type="button" id="CopyNCreate" value="COPY & CREATE" class="btn btn2" />
    &nbsp;<span id="RoleForm">
        Extended Role Name : <input type="text" id="RoleName" />
    </span>
    <span id="erromsg" style="display:none" class=" errorMsg"></span>
    <span id="savesuccess" style="display:none" class="saveSuccess">Role permission saved successfully.</span>
