@model EZRAC.Risk.UI.Web.ViewModels.Admin.PoliceAgencyMasterViewModel

<link href="@Url.Content("~/Content/dataTable.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/jquery-dataTable.js")" type="text/javascript"></script>
<script src="~/Scripts/appScripts/AdminPages/Common.js"></script>

@{
    ViewBag.Title = "Police Agency Management";
}
<!DOCTYPE html>
<html lang="en">
<body>
    @Html.Partial("~/Areas/Admin/Views/Admin/_ChildHeader.cshtml")
    <!-- main container -->
    <div>
        <div class="row top20">
            <div class="col-xs-12">
                <div class="form-group pull-left">
                    <div class="relative admin-search">
                        <div class="center-align input-type-search-icon input-icon">
                            <input type="text" placeholder="Search" class="form-control input-type-search" id="searchPoliceAgency">
                        </div>
                    </div>
                </div>
                <div class="form-group inline-form-space pull-left">
                    <button class="btn btn1" type="button" id="addPoliceAgency" data-url="@Url.Action("AddPoliceAgency", "PoliceAgency")"><span class="glyphicon"></span> NEW POLICE AGENCY</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5" id="policeAgencyList" style="max-height:680px;overflow-y:scroll;">
               @Html.Partial("_PoliceAgencyTable",Model.PoliceAgencyList)
            </div>
            <div class="col-xs-7">
                <div class="row tab-wrapper">
                    <div class="col-sm-12">
                        <div class="tab-content container-fluid no-padding" style="border-top: 1px solid #bdbdbd;">
                            <div id="policeAgenciesDetail" class="tab-pane fade in active" role="tabpanel">
                                @Html.Partial("_AddUpdatePoliceAgency",Model.PoliceAgencyViewModel)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix bottom-clearspace"></div>
    <!-- Footer --->
    <footer id="footer" class="cla-footer"> </footer>
</body>
</html>
