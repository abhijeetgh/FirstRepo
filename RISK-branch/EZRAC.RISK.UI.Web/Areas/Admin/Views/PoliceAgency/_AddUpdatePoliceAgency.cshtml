@model EZRAC.Risk.UI.Web.ViewModels.Admin.PoliceAgencyViewModel

@if (Model.IsNew)
{
    <h4 class="padding-left-15 padding-vertical-15" id="policeAgencyTitle">New Police Agency</h4>
}
else
{
    <h4 class="padding-left-15 padding-vertical-15" id="policeAgencyTitle">Update Police Agency</h4>
}
@using (@Ajax.BeginForm("AddOrUpdatePoliceAgency", "PoliceAgency", new { area = "Admin" }, new AjaxOptions { HttpMethod = "POST", OnSuccess = "successData(data)", OnFailure = "onErrorHandler(xhr)" }, new { @class = "form-horizontal cla-form top20 bottom20", role = "form", id = "policeAgencyForm" }))
{
    @Html.AntiForgeryToken()
    @*<form class="form-horizontal cla-form top20 bottom20">*@
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-l;g-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Agency Name<label class="mandetory-star">*</label></label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @*<input type="text" placeholder="Agency Name" class="form-control">*@
                @Html.TextBoxFor(x => x.AgencyName, new { @class="form-control" })
                @Html.ValidationMessageFor(x => x.AgencyName)
                <div id="errorAgencyName" class="errorMsg"></div>
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Address</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @*<input type="text" placeholder="Address" class="form-control">*@
                @Html.TextBoxFor(x => x.Address, new {  @class="form-control" })
                @Html.ValidationMessageFor(x => x.Address)
            </div>
        </div>
    </div>
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">City</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @*<input type="text" placeholder="City" class="form-control">*@
                @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.City)
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">State</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0 ">
                @*<input type="text" placeholder="State" class="form-control">*@
                @Html.TextBoxFor(x => x.State, new {  @class = "form-control" })
                @Html.ValidationMessageFor(x => x.State)
            </div>
        </div>
    </div>
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Zip</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @*<input type="email" placeholder="Zip" class="form-control">*@
                @Html.TextBoxFor(x => x.Zip, new { placeholder = "e.g. XXXXX-XXXX", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Zip)
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Phone</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0 ">
                @*<input type="text" placeholder="Phone" class="form-control">*@
                @Html.TextBoxFor(x => x.Phone, new { placeholder = "e.g. XXX-XXX-XXXX", @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Phone)
            </div>
        </div>
    </div>
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Fax</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @*<input type="email" placeholder="Fax" class="form-control">*@
                @Html.TextBoxFor(x => x.Fax, new {  @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Fax)
            </div>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Contact</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0 ">
                @*<input type="text" placeholder="Contact" class="form-control">*@
                @Html.TextBoxFor(x => x.Contact, new {  @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Contact)
            </div>
        </div>
    </div>
    <div class="row bottom10">
        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                <label for="">Email</label>
            </div>
            <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                @*<input type="email" placeholder="Email" class="form-control">*@
                @Html.TextBoxFor(x => x.Email, new {  @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
    </div>

    <div class="col-xs-12 bottom20 top15">
        <button class="btn btn2 form-buttons" type="button" disabled="disabled" id="cancelPoliceAgency">CANCEL</button>
        <button class="btn btn1 form-buttons" type="submit" disabled="disabled">SAVE</button>
    </div>
    @*</form>*@
    
    @Html.HiddenFor(x => x.Id, new { id = "policeAgencyId" })
}
<script src="~/Scripts/appScripts/AdminPages/police-agency.js"></script>