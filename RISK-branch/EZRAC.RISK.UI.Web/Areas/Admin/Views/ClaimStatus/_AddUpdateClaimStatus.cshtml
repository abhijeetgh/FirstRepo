@model EZRAC.Risk.UI.Web.ViewModels.Admin.ClaimStatusViewModel

@if (Model.IsNewClaimStatus)
{
    <h4 class="padding-left-15 padding-vertical-15" id="claimStatusPanelTitle">New Claim Status</h4>
}
else
{
    <h4 class="padding-left-15 padding-vertical-15" id="claimStatusPanelTitle">Update Claim Status</h4>
}
@using (@Ajax.BeginForm("AddOrUpdateClaimStatus", "ClaimStatus", new { area = "Admin" }, new AjaxOptions { HttpMethod = "POST", OnSuccess = "success(data)", OnFailure = "onErrorHandler(xhr)" }, new { @class = "form-horizontal cla-form top20 bottom20", role = "form", id = "claimStatusForm" }))
{
    @Html.AntiForgeryToken()
        <div class="row bottom10">
            <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                <div class="col-xs-4 col-sm-5 col-md-5 col-lg-4 top5 padding-right-0">
                    <label for="">Claim Status<label class="mandetory-star">*</label></label>
                </div>
                <div class="col-xs-8 col-sm-7 col-md-7 col-lg-8 padding-left-0">
                    @Html.TextBoxFor(x => x.ClaimStatus, new { @value = Model.ClaimStatus, @class = "form-control", @style = "width:300px;", @id = "claimStatus" })
                    @Html.ValidationMessageFor(model => model.ClaimStatus)
                    <div id="errorMessage" class="errorMsg"></div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 bottom20 top15">
            <button class="btn btn2 claim-stauts-buttons" type="button" disabled="disabled" id="cancelStatus">CANCEL</button>
            <button class="btn btn1 claim-stauts-buttons" type="submit" disabled="disabled" id="saveStatus">SAVE</button>
        </div>
    
    @Html.HiddenFor(x => x.Id, new { @id = "claimStatusId" });
}
<script src="@Url.Content("~/Scripts/appScripts/AdminPages/ClaimStatus/add-update-claim-status.js")" type="text/javascript"></script>