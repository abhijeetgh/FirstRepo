@model EZRAC.Risk.UI.Web.ViewModels.Admin.ClaimStatusMasterViewModel

<div>
    <div class="row top20">
        <div class="col-xs-12">
            <div class="form-group pull-left">
                <div class="relative admin-search">
                    <div class="center-align input-type-search-icon input-icon">
                        <input type="text" placeholder="Search" class="form-control input-type-search" id="searchStatus">
                    </div>
                </div>
            </div>
            <div class="form-group inline-form-space pull-left">
                <button class="btn btn1" type="button" id="addClaimStatus" data-url="@Url.Action("GetNewClaimStatus", "ClaimStatus")"><span class="glyphicon"></span> NEW CLAIM STATUS</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div id="updateContainer" class="col-xs-5" style="max-height:700px;overflow-y:scroll">
            @Html.Partial("_AdminClaimStatus", Model.ClaimStatusListViewModel)
        </div>
        <div class="col-xs-7">
            <div class="row tab-wrapper">
                <div class="col-sm-12">
                    <div class="tab-content container-fluid no-padding" style="border-top: 1px solid #bdbdbd">
                        <div id="adminClaimStatus" class="tab-pane fade in active" role="tabpanel">
                            @Html.Partial("_AddUpdateClaimStatus", Model.ClaimStatusViewModel)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/appScripts/AdminPages/ClaimStatus/claim-status-tab.js")" type="text/javascript"></script>
