@model IEnumerable<EZRAC.Risk.UI.Web.ViewModels.Admin.UserViewModel>
@{
    ViewBag.Title = "User Management";
}

@Html.Partial("~/Areas/Admin/Views/Admin/_ChildHeader.cshtml")
<div class="row top20">
    <div class="col-xs-12">
        <div class="form-group pull-left">
            <div class="relative admin-search">
                <div class="center-align input-type-search-icon input-icon">
                    <input type="text" id="userSearch" placeholder="Search" class="form-control input-type-search">
                </div>
            </div>
        </div>
        <div class="form-group inline-form-space pull-left">
            <button class="btn btn1" id="addUser" type="button"> NEW USER</button>
            @*<span id="errormsg" class="errorMsg" style="display:none">User has already assigned active claims.</span>*@
        </div>
    </div>
</div>
<div class="row">
    <div class="col-xs-6" id="UserList" style="max-height: 700px; overflow-y: auto; padding-right: 0; overflow-x: hidden;">
        @Html.Partial("_UserGridList", Model)
    </div>
    <div class="col-xs-6" id="UserEditProfile">
        @Html.Partial("_UserEditProfile", new EZRAC.Risk.UI.Web.ViewModels.Admin.UserViewModel() { AssignedLocations = ViewBag.Locations })
    </div>
</div>
@Html.Partial("~/Views/Claims/_ClaimsUrl.cshtml")
<script src="@Url.Content("~/Scripts/appScripts/AdminUser.js")"></script>
<script src="@Url.Content("~/Scripts/appScripts/AdminPages/Common.js")"></script>
<script src="~/Scripts/jquery-dataTable.js"></script>
<link href="~/Content/dataTable.css" rel="stylesheet" />
